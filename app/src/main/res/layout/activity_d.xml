<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityD">

    <Button
        android:id="@+id/btnD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity D(singleInstance)"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/againCallItself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to D itself"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/btnD"
        app:layout_constraintStart_toStartOf="@id/btnD"
        app:layout_constraintTop_toBottomOf="@id/btnD" />

    <Button
        android:id="@+id/btnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to B"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/againCallItself"
        app:layout_constraintStart_toStartOf="@id/againCallItself"
        app:layout_constraintTop_toBottomOf="@id/againCallItself" />
</androidx.constraintlayout.widget.ConstraintLayout>